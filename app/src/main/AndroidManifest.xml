<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_ejemplo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="EjemploApp-NO-MVC"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.app_ejemplo.usuario"/>
        <activity android:name="com.example.app_ejemplo.AcercaActivity" />
        <activity android:name="com.example.app_ejemplo.MarcasActivity" />

        <activity
            android:name="com.example.app_ejemplo.MainActivity"
            android:label="Demo App-No MVC"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.app_ejemplo.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>